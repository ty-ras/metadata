{
  "name": "@ty-ras/metadata-jsonschema",
  "version": "0.10.0",
  "author": {
    "name": "Stanislav Muhametsin",
    "email": "346799+stazz@users.noreply.github.com",
    "url": "https://github.com/stazz"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ty-ras/metadata"
  },
  "files": [
    "./src",
    "./dist",
    "README.md",
    "LICENSE.txt"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/eslint-parser": "7.19.1",
    "@types/json-schema": "7.0.11",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "ava": "4.3.3",
    "c8": "7.12.0",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-sonarjs": "0.15.0",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "scripts": {
    "build:run": "yarn run lint && yarn run tsc",
    "build:ci": "yarn run clear-build-artifacts && yarn run tsc && yarn run rename-js-to-mjs && yarn run tsc --module CommonJS && yarn run format-output-files",
    "clear-build-artifacts": "rm -rf dist build",
    "format-output-files": "eslint --no-eslintrc --config '.eslintrc.output.cjs' --fix 'dist/*js'",
    "lint": "eslint ./src --ext .ts,.tsx",
    "rename-js-to-mjs": "find dist -name '*.js' -type f -exec sh -c 'for f in \"$@\"; do mv -- \"$f\" \"${f%.js}.mjs\"; done' -- {} +",
    "tsc": "tsc --project tsconfig.build.json",
    "test:coverage": "c8 ava",
    "test:run": "ava"
  }
}